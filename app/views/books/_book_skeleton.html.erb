<%# Loading skeleton while book data loads %>
<div class="flex p-5 bg-gradient-to-r from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-xl shadow-lg border-0 animate-pulse">
  <!-- Cover Skeleton -->
  <div class="w-16 h-20 sm:w-20 sm:h-24 flex-shrink-0 bg-gray-300 dark:bg-gray-600 rounded-lg"></div>

  <!-- Content Skeleton -->
  <div class="flex-1 ml-4 min-w-0 flex flex-col">
    <!-- Title Skeleton -->
    <div class="h-5 bg-gray-300 dark:bg-gray-600 rounded w-3/4 mb-2"></div>
    
    <!-- Author Skeleton -->
    <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded w-1/2 mb-1"></div>
    
    <!-- Series Skeleton (sometimes present) -->
    <div class="h-3 bg-gray-300 dark:bg-gray-600 rounded w-2/3 mb-3"></div>
    
    <!-- Status and Actions Skeleton -->
    <div class="flex items-center justify-between mt-auto">
      <div class="flex items-center space-x-2">
        <div class="w-2.5 h-2.5 bg-gray-300 dark:bg-gray-600 rounded-full"></div>
        <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded w-20"></div>
      </div>
      
      <!-- Action Buttons Skeleton -->
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-gray-300 dark:bg-gray-600 rounded-lg"></div>
        <div class="w-8 h-8 bg-gray-300 dark:bg-gray-600 rounded-lg"></div>
      </div>
    </div>
  </div>
</div>