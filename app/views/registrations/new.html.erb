<div class="mx-auto md:w-1/2 w-full bg-white dark:bg-gray-800 p-10 rounded-lg shadow-lg">
  <h1 class="font-bold text-3xl text-center text-gray-900 dark:text-gray-100">Create account</h1>
  <p class="text-center text-gray-600 dark:text-gray-400 mt-4">Join ReadRitual to start tracking your reading journey!</p>

  <%= form_with model: @user, url: registrations_url, class: "mt-8 space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-3">
        <ul class="text-sm text-red-600 space-y-1">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Email Field -->
    <div class="space-y-2">
      <%= form.label :email_address, "Email Address", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.email_field :email_address, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", class: "block shadow-sm rounded-md border border-gray-300 dark:border-gray-700 focus:ring-blue-500 focus:border-blue-500 px-4 py-2 w-full dark:bg-gray-900 dark:text-gray-100" %>
    </div>

    <!-- Password Field -->
    <div class="space-y-2">
      <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.password_field :password, autocomplete: "new-password", placeholder: "Create a password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-300 dark:border-gray-700 focus:ring-blue-500 focus:border-blue-500 px-4 py-2 w-full dark:bg-gray-900 dark:text-gray-100" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="space-y-2">
      <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-300 dark:border-gray-700 focus:ring-blue-500 focus:border-blue-500 px-4 py-2 w-full dark:bg-gray-900 dark:text-gray-100" %>
    </div>

    <!-- Books Per Year Goal Field -->
    <div class="space-y-2">
      <%= form.label :books_per_year_goal, "Yearly Reading Goal", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.number_field :books_per_year_goal, value: 100, min: 1, max: 1000, placeholder: "100", class: "block shadow-sm rounded-md border border-gray-300 dark:border-gray-700 focus:ring-blue-500 focus:border-blue-500 px-4 py-2 w-full dark:bg-gray-900 dark:text-gray-100" %>
      <p class="text-xs text-gray-500 dark:text-gray-400">How many books do you want to read this year?</p>
    </div>

    <!-- Submit Button -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-center">
      <%= form.submit "Create account", class: "w-full sm:w-auto text-center rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium shadow-md" %>
    </div>
  <% end %>

  <!-- Footer -->
  <div class="mt-8 text-center text-sm text-gray-600 dark:text-gray-400">
    Already have an account? 
    <%= link_to "Sign in", new_session_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
  </div>
</div>