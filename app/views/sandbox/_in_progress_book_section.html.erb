<div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-lg overflow-hidden">
  <% if in_progress_book %>
    <% cache [Current.user, in_progress_book, "in_progress_book"] do %>
      <!-- Header with subtle gradient -->
      <div class="p-6 bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-800 dark:to-slate-700 border-b border-slate-200 dark:border-slate-600">
        <div class="flex items-center space-x-4">
          <!-- Book Cover -->
          <div class="relative w-20 h-28 flex-shrink-0">
            <%= image_tag in_progress_book.cover_image_url || "default_book_cover.jpg", 
                alt: "Current Book Cover", 
                class: "w-full h-full object-cover rounded-lg shadow-md" %>
            <!-- Eye Icon Link -->
            <%= link_to book_path(in_progress_book, return_to_title: 'Dashboard', return_to: request.env['PATH_INFO']), 
                class: "absolute -top-2 -right-2 bg-white hover:bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 rounded-full p-2 shadow-lg transition-all hover:scale-110" do %>
              <%= heroicon "eye", variant: :solid, options: { class: "w-4 h-4" } %>
            <% end %>
          </div>
          
          <!-- Book Details -->
          <div class="flex-1 min-w-0">
            <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-1 truncate">
              <%= in_progress_book.title %>
            </h3>
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-3 flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
              </svg>
              <%= in_progress_book.authors_names %>
            </p>
            
            <!-- Progress Information -->
            <% if in_progress_book.start_date %>
              <div class="flex items-center text-sm text-gray-600 dark:text-gray-400 mb-3">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Started <%= in_progress_book.start_date.strftime("%B %d, %Y") %>
              </div>
            <% end %>
            
            <!-- Action Button -->
            <%= button_to book_path(in_progress_book, return_to: root_path, book: { finish_date: Date.current }), 
                method: :patch, 
                class: "inline-flex items-center space-x-2 px-6 py-3 bg-emerald-600 hover:bg-emerald-700 dark:bg-emerald-600 dark:hover:bg-emerald-700 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105" do %>
              <%= heroicon "check-circle", variant: :solid, options: { class: "w-5 h-5" } %>
              <span>Mark as complete</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- Enhanced Empty State -->
    <div class="p-8 text-center bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-800">
      <div class="w-20 h-20 bg-gradient-to-br from-green-100 to-green-200 dark:from-green-900 dark:to-green-800 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">Ready to Start Reading?</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
        You don't have any books in progress right now. Pick your next great read and start your journey!
      </p>
      <div class="mb-4">
        <%= link_to new_book_path(return_to: root_path), 
            class: "inline-flex items-center space-x-2 px-6 py-3 bg-green-600 hover:bg-green-700 dark:bg-green-700 dark:hover:bg-green-600 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105" do %>
          <%= heroicon "plus-circle", variant: :solid, options: { class: "w-5 h-5" } %>
          <span>Add a Book</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>