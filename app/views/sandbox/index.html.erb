<div class="max-w-6xl mx-auto space-y-8">
  <% unless in_progress_book.nil? %>
    <%= turbo_stream_from in_progress_book %>
  <% end %>
  
  <!-- Modal Container for Celebration -->
  <div id="celebration-modal"></div>
  
  <!-- Page Header -->
  <div class="text-center space-y-4">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100">Your reading dashboard</h1>
    <div class="flex flex-col sm:flex-row justify-center sm:space-x-8 space-y-2 sm:space-y-0 text-sm">
      <div class="flex items-center justify-center space-x-2">
        <div class="w-3 h-3 bg-green-500 rounded-full flex-shrink-0"></div>
        <span class="text-gray-600 dark:text-gray-400"><%= @books_read %> books completed</span>
      </div>
      <div class="flex items-center justify-center space-x-2">
        <div class="w-3 h-3 bg-blue-500 rounded-full flex-shrink-0"></div>
        <span class="text-gray-600 dark:text-gray-400">Goal: <%= @books_goal %> books/year</span>
      </div>
      <% if Current.user.in_progress_books_count > 0 %>
        <div class="flex items-center justify-center space-x-2">
          <div class="w-3 h-3 bg-yellow-500 rounded-full flex-shrink-0"></div>
          <span class="text-gray-600 dark:text-gray-400"><%= Current.user.in_progress_books_count %> in progress</span>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Currently Reading Section -->
  <section class="currently-reading">
    <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 flex items-center">
      <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mr-4">
        <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
        </svg>
      </div>
      Currently reading
    </h2>
    <div id="in_progress_book_section">
      <%= render "in_progress_book_section" %>
    </div>
  </section>

  <!-- Goals Overview -->
  <% cache [Current.user, "goals_overview", Time.zone.now.to_date.month] do %>
    <section class="goals-overview">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 flex items-center">
        <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mr-4">
          <svg class="w-4 h-4 text-purple-600 dark:text-purple-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        Your reading goal
      </h2>
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-lg overflow-hidden">
        <!-- Header with subtle gradient -->
        <div class="p-6 bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-800 border-b border-gray-100 dark:border-gray-700">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Annual reading goal</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">Track your progress throughout the year</p>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-purple-600 dark:text-purple-400"><%= @books_read %></div>
              <div class="text-sm text-gray-600 dark:text-gray-400">of <%= @books_goal %> books</div>
            </div>
          </div>
          
          <!-- Progress Bar -->
          <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 relative overflow-hidden">
            <% progress_percentage = @books_goal > 0 ? (@books_read.to_f / @books_goal * 100).round(2) : 0 %>
            <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-3 rounded-full transition-all duration-500" 
                 style="width: <%= [progress_percentage, 100].min %>%"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-xs font-medium text-white mix-blend-difference">
                <%= progress_percentage.round(1) %>%
              </span>
            </div>
          </div>
        </div>
        
        <!-- Statistics -->
        <div class="p-6 bg-gray-50 dark:bg-gray-900">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex items-center justify-between p-4 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
              <div class="flex items-center">
                <%= heroicon "calendar", variant: :outline, options: { class: "w-5 h-5 mr-4 text-blue-500" } %>
                <span class="font-medium text-gray-700 dark:text-gray-300">Monthly average:</span>
              </div>
              <span class="text-lg font-bold text-gray-900 dark:text-gray-100"><%= Current.user.completed_per_month.round(1) %></span>
            </div>
            <div class="flex items-center justify-between p-4 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
              <div class="flex items-center">
                <%= heroicon "clock", variant: :outline, options: { class: "w-5 h-5 mr-4 text-green-500" } %>
                <span class="font-medium text-gray-700 dark:text-gray-300">Est. completion:</span>
              </div>
              <span class="text-lg font-bold text-gray-900 dark:text-gray-100">
                <% if @books_read > 0 %>
                  <%= Current.user.estimated_completion_date.strftime("%b %Y") %>
                <% else %>
                  <span class="text-sm text-gray-500">Not available</span>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Recently Completed Books -->
  <section class="recent-books">
    <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100 flex items-center">
      <div class="w-8 h-8 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mr-4">
        <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
      </div>
      Recently completed books
    </h2>
    <% cache [Current.user, "recently_completed_books"] do %>
      <% if @recently_completed.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% @recently_completed.each do |book| %>
            <% cache [book, "recently_completed"] do %>
              <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
                <!-- Book Cover Section -->
                <div class="relative h-48 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800">
                  <%= image_tag book.cover_image_url, 
                      alt: "Book Cover", 
                      class: "w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300 relative z-10" %>
                  <!-- Completion Badge -->
                  <div class="absolute top-2 right-2 bg-green-500 text-white text-xs font-bold px-2 py-1 rounded-full">
                    âœ“
                  </div>
                  <!-- Hover Overlay -->
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
                    <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      <%= link_to book_path(book), class: "bg-white text-gray-900 px-4 py-2 rounded-lg font-medium shadow-lg hover:bg-gray-100 transition-colors" do %>
                        View Details
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <!-- Book Details Section -->
                <div class="p-4 space-y-2">
                  <h3 class="font-bold text-gray-900 dark:text-gray-100 text-sm leading-tight line-clamp-2">
                    <%= book.title %>
                  </h3>
                  <p class="text-xs text-gray-600 dark:text-gray-400 flex items-center">
                    <svg class="w-3 h-3 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                    </svg>
                    <%= book.authors_names %>
                  </p>
                  <% if book.series_name %>
                    <p class="text-xs text-gray-500 dark:text-gray-500 flex items-center">
                      <svg class="w-3 h-3 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/>
                      </svg>
                      <%= book.series_name %>
                    </p>
                  <% end %>
                  <div class="flex items-center justify-between pt-2 border-t border-gray-200 dark:border-gray-700">
                    <p class="text-xs text-gray-500 dark:text-gray-500 flex items-center">
                      <svg class="w-3 h-3 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                      </svg>
                      <%= book.finish_date.strftime("%b %d") %>
                    </p>
                    <%= link_to book_path(book), class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <!-- Enhanced Empty State -->
        <div class="text-center py-16">
          <div class="w-24 h-24 bg-gradient-to-br from-green-100 to-green-200 dark:from-green-900 dark:to-green-800 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-2">No completed books yet</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
            Start reading to see your completed books appear here. Every finished book is a step towards your goal!
          </p>
          <a href="/books/new" class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 dark:bg-green-700 dark:hover:bg-green-600 text-white font-semibold rounded-lg transition-colors shadow-lg hover:shadow-xl">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Add your first book
          </a>
        </div>
      <% end %>
    <% end %>
  </section>
</div>
