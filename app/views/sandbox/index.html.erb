<div class="home-screen p-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 dark:bg-green-900 mb-5 text-green-500 dark:text-green-300 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <!-- Primary Actions -->
  <section class="actions my-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
      <!-- Mark a Book as Complete or Start a New Book -->
      <div class="bg-gray-100 dark:bg-gray-800 p-5 rounded shadow">
        <% if @in_progress_book %>
          <%= turbo_stream_from @in_progress_book %>
          <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Mark a Book as Complete</h2>
          <div class="flex items-center space-x-4 mt-3">
            <!-- Default Book Cover -->
            <div class="w-16 h-auto flex-shrink-0">
              <%= image_tag @in_progress_book.cover_image_url, alt: "Default Book Cover", class: "w-full h-full object-cover rounded-md" %>
            </div>
            <!-- Text and Button -->
            <div class="flex-1">
              <p class="text-gray-700 dark:text-gray-300">You are currently reading <strong class="text-gray-900 dark:text-gray-100"><%= @in_progress_book.title %></strong>.</p>
              <%= button_to book_path(@in_progress_book, return_to: root_path, book: { finish_date: Date.today }), method: :patch, class: "mt-3 flex items-center space-x-2 px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white font-medium rounded shadow" do %>
                <%= heroicon "check-circle", variant: :solid, options: { class: "w-5 h-5" } %>
                <span>Mark as Complete</span>
              <% end %>
            </div>
          </div>
        <% else %>
          <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Start a New Book</h2>
          <p class="text-gray-700 dark:text-gray-300">You currently have no books in progress.</p>
          <%= link_to new_book_path(return_to: root_path), class: "mt-3 flex items-center space-x-2 px-4 py-2 bg-green-600 hover:bg-green-500 dark:bg-green-700 dark:hover:bg-green-600 text-white font-medium rounded shadow" do %>
            <%= heroicon "plus-circle", variant: :solid, options: { class: "w-5 h-5" } %>
            <span>Add a Book</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Goals Overview -->
  <section class="goals-overview my-10">
    <h2 class="text-2xl font-bold mb-5 text-gray-900 dark:text-gray-100">Your Current Goal</h2>
    <div class="bg-gray-100 dark:bg-gray-800 p-5 rounded shadow">
      <p class="text-gray-700 dark:text-gray-300 mb-3">
        <strong class="text-gray-900 dark:text-gray-100">Books Per Year:</strong> <%= @books_read %> / <%= @books_goal %>
      </p>
      <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-4 mb-3">
        <div class="bg-blue-600 dark:bg-blue-500 h-4 rounded-full" style="width: <%= (@books_read.to_f / @books_goal * 100).round(2) %>%"></div>
      </div>
      <div class="text-sm text-gray-600 dark:text-gray-400 space-y-2">
        <div class="flex justify-between items-center">
          <div class="flex items-center">
            <%= heroicon "calendar", variant: :outline, options: { class: "w-4 h-4 mr-2" } %>
            <span class="font-medium">Avg/Month:</span>
          </div>
          <span class="font-semibold text-gray-900 dark:text-gray-100"><%= (@books_read.to_f / (Date.today.month)).round(2) %></span>
        </div>
        <div class="flex justify-between items-center">
          <div class="flex items-center">
            <%= heroicon "clock", variant: :outline, options: { class: "w-4 h-4 mr-2" } %>
            <span class="font-medium">Est. Done:</span>
          </div>
          <span class="font-semibold text-gray-900 dark:text-gray-100">
            <% if @books_read > 0 %>
              <%= (Date.today + ((@books_goal - @books_read) / (@books_read.to_f / Date.today.month)).round.months).strftime("%B %Y") %>
            <% else %>
              Not enough data
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Recently Completed Books -->
  <section class="recent-books my-8">
    <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">Recently Completed Books</h2>
    <% if @recently_completed.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <% @recently_completed.each do |book| %>
          <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm p-4 transition-transform hover:scale-105 flex space-x-4">
            <!-- Book Cover -->
            <div class="w-16 h-24 flex-shrink-0">
              <%= image_tag book.cover_image_url || "default_book_cover.jpg", alt: "Book Cover", class: "w-full h-full object-cover rounded-md" %>
            </div>
            <!-- Book Details -->
            <div class="flex-1">
              <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100 truncate"><%= book.title %></h3>
              <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">
                <strong>By:</strong> <%= book.authors_names %>
              </p>
              <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">
                <strong>Completed:</strong> <%= book.finish_date.strftime("%b %d, %Y") %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center text-gray-600 dark:text-gray-400 text-sm">No recently completed books.</p>
    <% end %>
  </section>
</div>
