<div class="mx-auto md:w-1/2 w-full bg-white dark:bg-gray-800 p-10 rounded-lg shadow-lg">
  <h1 class="font-bold text-3xl text-center text-gray-900 dark:text-gray-100">Sign in</h1>
  <p class="text-center text-gray-600 dark:text-gray-400 mt-4">Welcome back! Please enter your details below.</p>

  <%= form_with url: session_url, class: "mt-8 space-y-6" do |form| %>
    <!-- Email Field -->
    <div class="space-y-2">
      <%= form.label :email_address, "Email Address", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "block shadow-sm rounded-md border border-gray-300 dark:border-gray-700 focus:ring-blue-500 focus:border-blue-500 px-4 py-2 w-full dark:bg-gray-900 dark:text-gray-100" %>
    </div>

    <!-- Password Field -->
    <div class="space-y-2">
      <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-300 dark:border-gray-700 focus:ring-blue-500 focus:border-blue-500 px-4 py-2 w-full dark:bg-gray-900 dark:text-gray-100" %>
    </div>

    <!-- Submit Button and Forgot Password -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
      <%= form.submit "Sign in", class: "w-full sm:w-auto text-center rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium shadow-md" %>
      <%= link_to "Forgot password?", new_password_path, class: "text-sm text-blue-600 hover:text-blue-500 underline" %>
    </div>
  <% end %>

  <!-- Footer -->
  <div class="mt-8 text-center text-sm text-gray-600 dark:text-gray-400">
    Donâ€™t have an account? 
    <%= link_to "Sign up", '#', class: "text-blue-600 hover:text-blue-500 font-medium" %>
  </div>
</div>
