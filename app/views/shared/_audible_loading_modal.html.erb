<div class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 dark:bg-black/80 transition-opacity p-4 pt-[env(safe-area-inset-top,1rem)] pb-[env(safe-area-inset-bottom,1rem)]" 
     data-controller="audible-loading" 
     data-audible-loading-target="overlay"
     data-action="click->audible-loading#clickOverlay keydown@window->audible-loading#keydown">
  <div class="bg-white dark:bg-gray-900 rounded-xl shadow-2xl border-2 border-orange-400/30 dark:border-orange-400/50 p-4 sm:p-6 md:p-8 w-full max-w-sm sm:max-w-md max-h-[80vh] overflow-y-auto transform transition-transform relative" 
       data-audible-loading-target="modal">
    <!-- Loading background decoration -->
    <div class="absolute inset-0 bg-gradient-to-br from-orange-50/50 via-transparent to-blue-50/50 dark:from-orange-900/20 dark:via-transparent dark:to-blue-900/20 rounded-xl"></div>
    <div class="relative z-10">
    
    <!-- Loading Icon and Title -->
    <div class="text-center mb-4 sm:mb-6">
      <!-- Audible Logo with Animation -->
      <div class="text-3xl sm:text-4xl md:text-5xl mb-3 sm:mb-4 flex justify-center">
        <i class="fa-brands fa-audible text-orange-500 animate-pulse"></i>
      </div>
      <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2 drop-shadow-sm">
        Fetching from Audible
      </h2>
      <p class="text-sm sm:text-base md:text-lg text-gray-700 dark:text-gray-200">
        We're downloading your book details from Audible's servers...
      </p>
    </div>

    <!-- Progress Indicator -->
    <div class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700 rounded-xl p-3 sm:p-4 mb-4 sm:mb-6 border border-gray-200 dark:border-gray-600 shadow-inner">
      <div class="flex flex-col items-center space-y-3">
        <!-- Spinner -->
        <div class="relative">
          <div class="w-12 h-12 border-4 border-gray-200 dark:border-gray-600 rounded-full animate-spin border-t-orange-500"></div>
        </div>
        
        <!-- Progress Steps -->
        <div class="w-full max-w-xs">
          <div class="space-y-2 text-xs sm:text-sm text-gray-600 dark:text-gray-400">
            <div class="flex items-center space-x-2" data-audible-loading-target="step1">
              <div class="w-2 h-2 bg-orange-500 rounded-full animate-pulse"></div>
              <span>Connecting to Audible...</span>
            </div>
            <div class="flex items-center space-x-2" data-audible-loading-target="step2">
              <div class="w-2 h-2 bg-gray-300 dark:bg-gray-600 rounded-full"></div>
              <span>Downloading book page...</span>
            </div>
            <div class="flex items-center space-x-2" data-audible-loading-target="step3">
              <div class="w-2 h-2 bg-gray-300 dark:bg-gray-600 rounded-full"></div>
              <span>Extracting book details...</span>
            </div>
            <div class="flex items-center space-x-2" data-audible-loading-target="step4">
              <div class="w-2 h-2 bg-gray-300 dark:bg-gray-600 rounded-full"></div>
              <span>Creating your book entry...</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Message -->
    <div class="text-center mb-4 sm:mb-6">
      <p class="text-sm sm:text-base text-gray-700 dark:text-gray-300 font-medium">
        This usually takes 5-15 seconds. Please don't close this page.
      </p>
    </div>

    <!-- Cancel Button (optional) -->
    <div class="flex justify-center">
      <button data-action="click->audible-loading#cancel" 
              class="px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 rounded-lg transition-colors font-medium border border-gray-300 dark:border-gray-600 text-sm">
        Cancel
      </button>
    </div>
    </div>
  </div>
</div>